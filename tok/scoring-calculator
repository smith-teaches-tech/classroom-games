        <div id="result" class="result">
            <h2>Semester 1 Grade</h2>
            <div class="final-grade" id="finalGrade">-</div>
            <div class="breakdown">
                <div class="breakdown-item"><strong>Exhibition:</strong> <span id="exhibitionScore"></span></div>
                <div class="breakdown-item"><strong>Essay (×2):</strong> <span id="essayWeighted"></span></div>
                <div class="breakdown-item" style="padding-top: 10px; border-top: 1px solid #ddd;"><strong>IB-Style Total:</strong> <span id="ibTotal"></span> / 30</div>
                <div class="breakdown-item"><strong>Base Grade:</strong> <span id="baseGrade"></span></div>
                <div class="breakdown-item"><strong>Class Achievement:</strong> <span id="classAchievement"></span></div>
                <div class="breakdown-item" style="margin-top: 10px; padding-top: 10px; border-top: 1px solid #ddd;"><strong>Final Adjusted Grade:</strong> <span id="adjustedGrade"></span></div>
            </div>
        </div>
        
        <div class="weight-info">
            <strong>Formula:</strong> Exhibition + (Essay × 2) = Score out of 30<br>
            <strong>IB Grade Boundaries:</strong> A: 22-30 | B: 17-21 | C: 12-16 | D: 7-11 | E: 0-6
            <div class="modifier-note">
                <strong>Class Achievement Modifier:</strong> Class grade can adjust your final grade up or down by one letter grade if there's a significant discrepancy between class performance and assessment scores.
            </div>
        </div>
    </div>

    <script>
        function calculateGrade() {
            // Get input values
            const exhibitionScore = parseFloat(document.getElementById('exhibition').value);
            const essayScore = parseFloat(document.getElementById('essayScore').value);
            const classGrade = document.getElementById('classGrade').value;
            
            // Validate inputs
            if (isNaN(exhibitionScore)) {
                alert('Please select an exhibition score.');
                return;
            }
            
            if (isNaN(essayScore)) {
                alert('Please select an essay score.');
                return;
            }
            
            if (!classGrade) {
                alert('Please select a class achievement grade.');
                return;
            }
            
            // Calculate IB-style total (Exhibition + Essay×2)
            const essayWeighted = essayScore * 2;
            const ibTotal = exhibitionScore + essayWeighted;
            
            // Determine base grade from IB boundaries
            let baseGrade;
            if (ibTotal >= 22) {
                baseGrade = 'A';
            } else if (ibTotal >= 17) {
                baseGrade = 'B';
            } else if (ibTotal >= 12) {
                baseGrade = 'C';
            } else if (ibTotal >= 7) {
                baseGrade = 'D';
            } else {
                baseGrade = 'E';
            }
            
            // Apply class achievement modifier
            let finalGrade = baseGrade;
            const gradeOrder = ['E', 'D', 'C', 'B', 'A'];
            const baseIndex = gradeOrder.indexOf(baseGrade);
            const classIndex = gradeOrder.indexOf(classGrade);
            
            // If class grade is 2+ levels different, adjust by 1 level
            if (classIndex - baseIndex >= 2) {
                // Class performance significantly better, move up 1 grade
                finalGrade = gradeOrder[Math.min(baseIndex + 1, 4)];
            } else if (baseIndex - classIndex >= 2) {
                // Class performance significantly worse, move down 1 grade
                finalGrade = gradeOrder[Math.max(baseIndex - 1, 0)];
            }
            // If difference is 0 or 1 level, no adjustment
            
            // Display results
            document.getElementById('finalGrade').textContent = finalGrade;
            document.getElementById('exhibitionScore').textContent = exhibitionScore + ' / 10';
            document.getElementById('essayWeighted').textContent = essayScore + ' × 2 = ' + essayWeighted;
            document.getElementById('ibTotal').textContent = ibTotal;
            document.getElementById('baseGrade').textContent = baseGrade;
            document.getElementById('classAchievement').textContent = classGrade;
            document.getElementById('adjustedGrade').textContent = finalGrade;
            
            document.getElementById('result').classList.add('show');
        }
        
        // Allow Enter key to calculate
        document.addEventListener('keypress', function(event) {
            if (event.key === 'Enter') {
                calculateGrade();
            }
        });
    </script>
